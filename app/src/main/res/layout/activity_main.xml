<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.ahmedmagdy.almohtawa.MainActivity">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_margin="15dp">
    <TextView
        android:id="@+id/question_textview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#000000"
        android:text="Question"/>
    <EditText
    android:id="@+id/question"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
        android:layout_marginBottom="15dp"
        android:hint="Enter the question"/>
    <TextView
        android:id="@+id/answer1_textview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#000000"
        android:layout_margin="0dp"
        android:text="Answer 1"/>
    <EditText
        android:id="@+id/answer1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="15dp"

        android:hint="Enter the first answer"/>
    <TextView
        android:id="@+id/answer2_textview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#000000"
        android:layout_margin="0dp"
        android:text="Answer 2"/>
    <EditText
        android:id="@+id/answer2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="15dp"
        android:hint="Enter the second answer"/>
    <TextView
        android:id="@+id/answer3_textview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#000000"
        android:layout_margin="0dp"
        android:text="Answer 3"/>
    <EditText
        android:id="@+id/answer3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="15dp"
        android:hint="Enter the third answer"/>
    <TextView
        android:id="@+id/answer4_textview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#000000"
        android:layout_margin="0dp"
        android:text="Answer 4"/>

    <EditText
    android:id="@+id/answer4"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
        android:layout_marginBottom="15dp"
        android:hint="Enter the forth answer"/>
    <TextView
        android:id="@+id/answer_correct_textview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#000000"
        android:layout_margin="0dp"
        android:text="Correct answer"/>
    <EditText
        android:id="@+id/answer_correct"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="15dp"
        android:hint="Enter the correct answer"/>
    <Button
        android:id="@+id/button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="#000000"
        android:text="Add a question"/>

</LinearLayout>

</ScrollView>